<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="command_tree">
            <field name="name">vente.command</field>
            <field name="model">vente.command</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="totale"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="command_form">
            <field name="name">vente.command</field>
            <field name="model">vente.command</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="next_level" type="object" class="oe_highight" string="next level"/>
                        <field name="state" widget="statusbar" nolabel="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="totale"/>

                            </group>
                            <group>
                                <field name="client_id"/>
                                <!--                            <field name="state"/>-->

                            </group>
                        </group>
                        <notebook>
                            <page string="liste of articles">
                                <field name="article_ids"/>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

